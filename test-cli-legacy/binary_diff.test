$ darn init --legacy
$ darn new first --descr "First patch"
$ darn add binary1 dir1/binary1 dir2/binary1 dir2/subdir1/binary1 > /dev/null
$ darn_test_tree modify binary1 dir1/binary1 dir2/binary1 dir2/subdir1/binary1
$ darn refresh
$ darn diff
